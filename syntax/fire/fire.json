{
	"name": "FireTPL",
	"patterns": [
		{
			"name": "indention",
			"match": "^([ \\t]+)"
		}, {
			"name": "helper",
			"match": "(?::([a-zA-Z][a-zA-Z0-9_-]*)\\s*(\\$[a-zA-Z][a-zA-Z0-9._-]*)?)"
		}, {
			"name": "string",
			"match": "(\\\"[^\\\"]*\\\")"
		}, {
			"name": "attribute",
			"match": "(\\b[a-zA-Z0-9_]+=(?:(?:\\\"[^\\\"]*\\\")|(?:\\S+)))"
		}, {
			"name": "tag",
			"match": "(?:([a-zA-Z][a-zA-Z0-9:_-]*)+(?:(.*)\\n|$)?)"
		}
	],
	"modifer": "gm",
	"scopes": {
		"1": "indention",
		"2": "helper",
		"3": "expression",
		"4": "string",
		"5": "attribute",
		"6": "tag",
		"7": "tagAttributes"
	}
}