{
	"name": "FireTPL",
	"patterns": [
		{
			"name": "empty-line",
			"match": "(^\\s*$)"
		}, {
			"name": "indention",
			"match": "^([ \\t]+)"
		}, {
			"name": "helper",
			"match": "(?::([a-zA-Z][a-zA-Z0-9_-]*)\\s*((?:\\$[a-zA-Z][a-zA-Z0-9._-]*)(?:\\s*:.*$)?)?)"
		}, {
			"name": "string",
			"match": "(\\\"[^\\\"]*\\\")"
		}, {
			"name": "attribute",
			"match": "(\\b[a-zA-Z0-9_]+=(?:(?:\\\"[^\\\"]*\\\")|(?:\\S+)))"
		}, {
			"name": "tag",
			"match": "(?:([a-zA-Z][a-zA-Z0-9:_-]*)+(?:(.*)\\n|$)?)"
		}, {
			"name": "variable",
			"match": "([@\\$][a-zA-Z][a-zA-Z0-9._-]*)"
		}
	],
	"modifer": "gm",
	"scopes": {
		"1": "unused",
		"2": "indention",
		"3": "helper",
		"4": "expression",
		"5": "string",
		"6": "attribute",
		"7": "tag",
		"8": "tagAttributes",
		"9": "variable"
	}
}